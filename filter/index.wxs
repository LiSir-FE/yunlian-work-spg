var filter = {
    //日期格式化
    formatDate: function (id) {
        var date = getDate(id * 1);
        var Y = date.getFullYear() + '-';
        var M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1) + '-';
        var D = date.getDate() < 10 ? '0' + date.getDate() + ' ' : date.getDate() + ' ';
        // var h = date.getHours() < 10 ? '0' + date.getHours() + ':' : date.getHours() + ':';
        // var m = date.getMinutes() < 10 ? '0' + date.getMinutes() + ' ' : date.getMinutes();
        return Y + M + D;
    },
    formatDateS: function (id) {
        var date = getDate(id * 1);
        var Y = date.getFullYear() + '-';
        var M = (date.getMonth() + 1 < 10 ? '0' + (date.getMonth() + 1) : date.getMonth() + 1) + '-';
        var D = date.getDate() < 10 ? '0' + date.getDate() + ' ' : date.getDate() + ' ';
        var h = date.getHours() < 10 ? '0' + date.getHours() + ':' : date.getHours() + ':';
        var m = date.getMinutes() < 10 ? '0' + date.getMinutes() + ' ' : date.getMinutes();
        return Y + M + D + h + m;
    },
    // 工作-分类
    workType: function (val) {
        switch (val) {
            case 1: {
                return '信息沟通';
            }
            case 2: {
                return '商务合作';
            }
            case 3: {
                return '资源对接';
            }
            case 4: {
                return '采访报道';
            }
            case 5: {
                return '培训咨询';
            }
            default:
                return '';
        }
    },
    communicateMethod: function (val) {
        switch (val) {
            case 1: {
                return '电话';
            }
            case 2: {
                return '微信';
            }
            case 3: {
                return '邮件';
            }
            case 4: {
                return '面谈';
            }
            case 5: {
                return '视频会议';
            }
            default:
                return '';
        }
    },
    intJob: function (val) {
        switch (val) {
            case 1: {
                return '董事长/总经理';
            }
            case 2: {
                return '副总裁/副总经理';
            }
            case 3: {
                return '事业部总经理';
            }
            case 4: {
                return '总监';
            }
            case 5: {
                return '高级经理/经理';
            }
            case 6: {
                return '主管';
            }
            case 7: {
                return '专员';
            }
            case 8: {
                return '总裁秘书/助理';
            }
            case 9: {
                return '创始人/联合创始人/合伙人';
            }
            default:
                return '';
        }
    },
    digitalZhuan: function(val) {
        switch (val) {
            case 1: {
                return 'A';
            }
            case 2: {
                return 'B';
            }
            case 3: {
                return 'C';
            }
            case 4: {
                return 'D';
            }
            default:
                return '';
        }
    },
    classify: function (val) {
        switch (val) {
            case 1: {
                return '行业';
            }
            case 2: {
                return '企业';
            }
            case 3: {
                return '运联';
            }
            case 4: {
                return '其它';
            }
            default:
                return '';
        }
    },
    taskStatus: function (val) {
        switch (val) {
            case 1: {
                return '进行中';
            }
            case 2: {
                return '已完成';
            }
            case 3: {
                return '已结束';
            }
            default:
                return '';
        }
    },
    mycoursesStatus: function (val) {
        switch (val) {
            case 0: {
                return '未学习';
            }
            case 1: {
                return '学习中';
            }
            case 2: {
                return '已完成';
            }
            default:
                return '';
        }
    },
    courseWorksStatus: function (val) {
        switch (val) {
            case 0: {
                return '未完成';
            }
            case 1: {
                return '已完成';
            }
            default:
                return '';
        }
    },
    resultPage: function (val) {
        console.log(val)
        if (val > 0 && val < 60) {
            return val + '秒'
        } else if(val > 60 && val <= 3599) {
            return val / 60 + '分' + (parseInt(val % 60) == '0' ? '' : parseInt(val % 60) + '秒')
        } else if(val >= 3600) {
            return parseInt(val / 3600) + '小时' + (parseInt(val % 3600 / 60) == '0' ? '' : parseInt(val % 3600 / 60) + '分') + (parseInt(val % 60) == '0' ? '' : parseInt(val % 60) + '秒')
        }
    }
    
}

module.exports = filter;