/* pages/mysteryMap/index.wxss */
page{
  width: 100%;
  height: 100%;
}
.canvas-box {
  position: fixed;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
}
.img{
  width: 100%;
  height: 100%;
}

.canvas-box .mycanvas {
  position: absolute;
  width: 550rpx;
  height: 80%;
  top: 50%;
  left: 50%;
  transform: translate(-50%, -55%);
}

.foot-swner{
  width: 100%;
  bottom: 2%;
  box-sizing: border-box;
  text-align: center;
  display: flex;
  position: absolute;
  z-index: 2;
  justify-content: center; /* 水平居中 */
  align-items: center;     /* 垂直居中 */
}

.shareFriends{
  color: #fff;
   background: linear-gradient(to right, #2e6eff,80%, #93e0ff);
  padding: 26rpx;
  border-radius: 15rpx;
  font-size: 32rpx;
  box-sizing: border-box;

}