.title{
  width: 90%;
  background: #fff;
  border-radius: 8rpx;
  padding: 20rpx 10rpx;
  line-height: 50rpx;
  font-size: 28rpx;
  margin: 10rpx auto 20rpx auto;
}

.warp{
  width: 90%;
  margin: 0 auto;
  background: #fff;
  display: inline-block;
  border-radius: 6rpx;
}
.wenten{
    width: 100%;
    display: inline-block;
    font-size: 28rpx;
    padding: 20rpx 10rpx;
    box-sizing: border-box;
}
.textareas{
  width: 98%;
  border: 1px dashed #F8F8F8;
  margin: 0 auto;
}
.texts{
  font-size: 26rpx;
  padding: 10rpx 0 0 10rpx;
  line-height: 40rpx;
}


.trunkLine-done-button {
  height: 88rpx;
  width: 100%;
  margin-bottom: 30rpx;
  margin-top: 30rpx;
  /* display: inline-block; */
  background-image: linear-gradient(-229deg, #4fcbff 16%, #17a9df 100%);
  box-shadow: 0 25rpx 24rpx 0 rgba(23, 169, 223, 0.20);
  border-radius: 4rpx;
  color: #fff;
  line-height: 88rpx;
  font-size: 32rpx;
}