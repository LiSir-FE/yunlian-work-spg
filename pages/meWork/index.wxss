/* pages/meWork/index.wxss */
.container {
    width: 100%;
    height: auto;
    display: flex;
    background-color: #f2f2f2;
    border-top: 1rpx solid #f0f2f5;
}

.work-input-panel{
    display: flex;
    flex-direction: row;
    width: 690rpx;
    height: 88rpx;
    border-bottom:1px dashed hsl(0, 0%, 95%);
}

.work-input-title{
    width: 210rpx;
    box-sizing: border-box;
    display: flex;
    align-items: center;
    font-family: PingFangSC-Regular;
    font-size: 28rpx;
    color: #666666;
    letter-spacing: 0;
    padding: 0rpx 0rpx 0rpx 60rpx;
    flex-shrink: 0;
    flex-grow: 0;
}

.work-input{
    width: 500rpx;
    height: 100%;
    font-size: 28rpx;
    flex-grow: 1;
    flex-shrink: 1;
    line-height: 88rpx;
}

.IconTrue{
    position:absolute;
    right:60rpx;
    top:30rpx;
    z-index: 2;
}

.msg-item {
    width: 100%;
    height: 140rpx;
    box-sizing: border-box;
    padding: 0 30rpx;
    background-color: #fff;
    margin-bottom: 4rpx;
    float: left;
}

.item-info {
    width: 100%;
    height: 70rpx;
    float: left;
    line-height: 70rpx;
    margin-left: 10rpx;
}

.item-title {
    font-size: 28rpx;
    color: #666;
    line-height: 48rpx;
}

.item-time {
    font-size: 24rpx;
    color: #999;
    margin: 0 10rpx;
    text-align: center;
    box-sizing: border-box
}


.item-desc {
    font-size: 24rpx;
    color: #999;
    line-height: 48rpx;
    height: 48rpx;
    width: 100%;
}